<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment"
              android:name="com.haidar.mediasaver.fragments.MainFragment"
              android:label="main_fragment"
              tools:layout="@layout/main_fragment">
        <action android:id="@+id/action_mainFragment_to_addItemFragment"
                app:destination="@id/addItemFragment"
                app:popEnterAnim="@anim/nav_default_enter_anim"/>
    </fragment>
    <fragment android:id="@+id/addItemFragment"
              android:name="com.haidar.mediasaver.fragments.AddItemFragment"
              android:label="null"
              tools:layout="@layout/add_item_fragment"/>
</navigation>